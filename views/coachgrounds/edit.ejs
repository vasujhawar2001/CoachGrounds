<% layout('layouts/boilerplate') %>

    <div class="row">
        <h1 class="text-center">
            New CoachGround
        </h1>
        <div class="col-6 offset-3">
            <form action="/coachgrounds/<%=coachground._id%>?_method=PUT" method="POST" novalidate class="validated-form">
                <div class="mb-3">
                    <label for="title" class="form-label">Title:</label>
                    <input type="text" id="title" name="coachground[title]" class="form-control" value="<%=coachground.title%>" required>
                </div>
                <div class="mb-3">
                    <label for="location" class="form-label">Location:</label>
                    <input type="text" id="location" name="coachground[location]" class="form-control" value="<%=coachground.location%>" required>
                </div>
                <div class="mb-3">
                    <label for="image" class="form-label">Image url</label>
                    <input type="text" id="iamge" name="coachground[image]" class="form-control" value="<%=coachground.image%>" required>
                </div>
                <div class="mb-3">
                    <label for="price" class="form-label">Price</label>
                    <div class="input-group mb-3">
                            <span class="input-group-text" id="price-label">$</span>
                            <input type="number" step="0.01" name="coachground[price]" class="form-control" id="price" placeholder="0.00" aria-label="price" aria-describedby="price-label" value="<%=coachground.price%>" required>
                    </div>    
                </div>
                <div class="mb-3">
                    <label for="description" class="form-label">Description</label>
                    <textarea required type="text" id="description" name="coachground[description]" class="form-control"><%=coachground.description %></textarea>
                </div>
                <div class="mb-3">
                    <button class="btn btn-info">Update CoachGround</button>
                </div>
    
            </form>
            <a href="/coachgrounds/<%=coachground._id%> ">Back to CoachGround</a>
        </div>
    </div>